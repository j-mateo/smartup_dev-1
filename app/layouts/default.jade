    header.header
      .container-fluid
        .row
          h1.text-muted
            a(href='/')
              img.img-responsive(src='/images/SmartUp_Brand.svg', alt='smartup')
              span.sr-only smartup
          .nav-wrap.navbar
            button.navbar-toggle.collapsed.navbar-trigger(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
              span.sr-only Toggle navigation
              i.fa.fa-bars
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              .login-box
                p YOUR COMMUNITY
                .login-btns
                  a.cbtn.btn-dark(href='/create_community/') create
                  a.cbtn.btn-bright.borderless(href='/find_community/') sign in / find
              nav.main-nav
                ul.nav.pull-right
                  li.active
                    a(href='/features/') Features
                  li
                    a(href='/pricing/') Pricing
                  li
                    a(href='https://medium.com/smartup-io-the-ultimate-founder-guide') Blog

    .main-wrap
      block content


    footer.footer
      .container-fluid
        .row
          .col-md-8.col-sm-9.col-xs-12.copy-col
            small.copy
              span.copy-txt SmartUp.io, ltd &copy; 2017
              span
                a(href='/privacy/', target='_blank') Privacy
              span
                a(href='/copyright/', target='_blank') Copyright
              span
                a(href='/terms_and_services/', target='_blank') Terms of Service
              span
                a(href='/team/') Team
              span
                a(href='/contact/') Contact
              span
                a(href='/press/') Press
          .col-md-4.col-sm-3.col-xs-12.social-col
            ul.social
              li
                a(href="#{facebook}")
                  i.fa.fa-facebook
                  | &nbsp;
              li
                a(href="#{twitter}")
                  i.fa.fa-twitter
                  | &nbsp;
              li
                a(href="#{instagram}")
