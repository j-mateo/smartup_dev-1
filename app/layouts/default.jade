head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    block metaVar
    if meta
      block metaContent
    else
      meta(name='description', content='Show what you know with SmartUp, The knowledge sharing platform for startups, innovators, teams and enterprises everywhere.')
      title SmartUp - The Peer to Peer Knowledge Sharing Platform for Teams
    
