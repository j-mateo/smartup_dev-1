extends layouts/default
block content
    .container.feedback-intro
        .row
            .col-xs-12
                h2.text-center.feedback-title Hi, we're looking forward to getting your team up and running on SmartUp.
                p.text-center To get started, please tell us a little more about you and your company. An experienced member of our team will be in touch to learn how SmartUp can help you.

    .container.feedback-from
        form.contact-form(method='post', action='#', data-redirect='get_in_touch_confirm.html')
            input(type='hidden', name='form-name', value='get in touch')
            .row.feedback-row
                .col-md-6
                    .form-group
                      label(for='get-in-touch-username') Your name*
                      input#get-in-touch-username.form-control(type='text', name='get-in-touch-username', placeholder='John Doe', required)
                .col-md-6
                    .form-group
                      label(for='get-in-touch-organization-name') Your organizationâ€™s name*
                      input#get-in-touch-organization-name.form-control(type='text', name='get-in-touch-organization-name', placeholder='SmartUp', required)
            .row.feedback-row
                .col-md-4
                    .form-group
                      label(for='get-in-touch-email') Your work email*
                      input#get-in-touch-email.form-control(type='email', name='get-in-touch-email', placeholder='johndoe@', required)
                .col-md-4
                    .form-group
                      label(for='get-in-touch-phone') Your telephone number
                      input#get-in-touch-phone.form-control(type='tel', name='get-in-touch-phone', placeholder='e.g. +1 555 123 4567')
                .col-md-4
                    .form-group
                      label(for='request-organization-size') Your organization's size?*
                      select#request-organization-size.form-control(name='request-organization-size', required)
                        option 1-25
                        option 26-50
                        option 51-200
                        option 201-500
                        option 501-1,000
                        option 1001-5,000
                        option 5001-10,000
                        option 10,000+

            .row
                .col-xs-12.text-center
                    button#submitContact.cbtn.btn-dark(type='submit') get in touch